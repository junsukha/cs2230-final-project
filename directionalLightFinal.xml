<scenefile>
	<globaldata>
		<diffusecoeff v="0.5"/>
		<specularcoeff v="0.5"/>
		<ambientcoeff v="0.5"/>
	</globaldata>

	<cameradata>
		<pos x="-6" y="10" z="60"/>
		<focus x="0" y="5" z="0"/>
		<up x="0" y="1" z="0"/>
		<heightangle v="30"/>
	</cameradata>
	
	<lightdata>
		<id v="0"/>
		<type v="point"/>
		<color r="1" g="1" b="1"/>
		<position x="0" y="3" z="0"/>
        <function x="0.8" y="0.2" z="0.0"/>
	</lightdata>

	<lightdata>
		<id v="0"/>
		<type v="directional"/>
		<color r="1" g="1" b="1"/>
		<direction x="0" y="-1" z="0"/>
	</lightdata>
	
	<lightdata>
		<id v="0"/>
		<type v="spot"/>
