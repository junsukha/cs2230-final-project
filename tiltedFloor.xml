<scenefile>
	<globaldata>
		<diffusecoeff v="0.5"/>
		<specularcoeff v="0.5"/>
		<ambientcoeff v="0.5"/>
	</globaldata>

	<cameradata>
		<pos x="-6" y="10" z="60"/>
		<focus x="0" y="5" z="0"/>
		<up x="0" y="1" z="0"/>
		<heightangle v="30"/>
	</cameradata>

	<lightdata>
		<id v="0"/>
		<type v="directional"/>
		<color r="1" g="1" b="1"/>
		<direction x="0" y="-1" z="0"/>
	</lightdata>
	
	<object type="tree" name="root">
		<transblock>
			<translate x="0" y="-1.6" z="0"/>
            <rotate x="0" y="0" z="1" angle="30"/>
			<scale x="20" y="0.4" z="20"/>
			<object type="primitive" name="cube" >
				<diffuse r="0.1" g="0.4" b="0.8"/>
			</object>
		</transblock>
		<transblock>
			<translate x="0" y="-1.5" z="0"/>
			<object type="primitive" name="sphere" >
				<shininess v="15.0"/>
				<specular r="1.0" g="1.0" b="1.0"/>
				<diffuse r="0.6" g="0.8" b="0.6"/>
			</object>
		</transblock>

	</object>

</scenefile>